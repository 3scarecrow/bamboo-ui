<!--packages/virtual-scroll-list/demo/index.wxml-->
<virtual-scroll-list
  id="virtual-list"
  loading="{{ loading }}"
  sourceData="{{ listData }}"
  itemHeight="200rpx"
  height="500"
  startIndex="{{ startIndex }}"
  endIndex="{{ endIndex }}"
  bind:visibleDataChange="onVisibleDataChange"
  bind:scrolltolower="loadMore"
  bind:refresh="refresh"
>
  <view wx:for="{{visibleData}}" wx:key="id" style="height: 200rpx">
  <image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" mode=""/>
  {{ item.id }}</view>
  <view slot="footer">
    <view wx:if="{{listData.length >= total}}">
      没有更多了
    </view>
    <view wx:if="{{loading}}">加载中...</view>
  </view>
  <view slot="empty">
    <slot name="empty"></slot>
  </view>
</virtual-scroll-list>